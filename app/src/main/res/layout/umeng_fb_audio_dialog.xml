<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/umeng_fb_audio_dialog_layout"
        android:layout_width="@dimen/pp_height_200"
        android:layout_height="@dimen/pp_height_200"
        android:layout_centerInParent="true"
        android:background="#F4404040"
        android:gravity="center">

        <View
            android:id="@+id/umeng_fb_audio_dialog_count_down_tv"
            android:layout_width="@dimen/pp_height_100"
            android:layout_height="@dimen/pp_height_100"
            android:layout_centerHorizontal="true"
            android:background="@drawable/umeng_fb_audio_dialog_content" />

        <TextView
            android:id="@+id/umeng_fb_audio_dialog_count_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_height_100"
            android:layout_below="@id/umeng_fb_audio_dialog_count_down_tv"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/umeng_fb_white"
            android:textSize="@dimen/text_size_60"
            android:visibility="gone" />

        <TextView
            android:id="@+id/umeng_fb_audio_dialog_count_down_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/umeng_fb_audio_dialog_count_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/pp_margin_20"
            android:text="@string/umeng_fb_slide_up_cancel"
            android:textColor="@color/umeng_fb_white"
            android:textSize="@dimen/text_size_16" />


    </RelativeLayout>

</RelativeLayout>