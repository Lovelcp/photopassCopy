<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_opinions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.pictureair.photopassCopy.activity.OpinionsActivity">

    <LinearLayout
        android:id="@+id/head2"
        style="@style/ImmersiveMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/immersive_color">

        <include
            android:id="@+id/head"
            layout="@layout/top_bar"
            android:layout_width="match_parent"
            android:layout_height="52dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/pp_light_gray_background"
        >

        <com.pictureair.photopassCopy.widget.CircleImageView
            android:id="@+id/user_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/opinion_title_head"
            />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/opinions_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.pictureair.photopassCopy.widget.CustomTextView
            android:id="@+id/opinions_tv_questions"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/opinions_questions"
            android:textSize="@dimen/text_size_16"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:textColor="@color/pp_light_blue"
            android:paddingTop="@dimen/pp_dp_16"
            android:paddingBottom="@dimen/pp_dp_16"
            />

        <ImageView
            android:layout_width="@dimen/pp_dp_30"
            android:layout_height="@dimen/pp_dp_30"
            android:scaleType="centerInside"
            android:layout_marginRight="@dimen/pp_dp_20"
            android:src="@drawable/opinion_question"
            android:layout_toLeftOf="@id/opinions_tv_questions"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/pp_px_1"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/opinions_online"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.pictureair.photopassCopy.widget.CustomTextView
            android:id="@+id/opinions_tv_online"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/opinions_online"
            android:textSize="@dimen/text_size_16"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:textColor="@color/pp_light_blue"
            android:paddingTop="@dimen/pp_dp_16"
            android:paddingBottom="@dimen/pp_dp_16"
            />

        <ImageView
            android:layout_width="@dimen/pp_dp_30"
            android:layout_height="@dimen/pp_dp_30"
            android:scaleType="centerInside"
            android:layout_marginRight="@dimen/pp_dp_20"
            android:src="@drawable/opinion_online"
            android:layout_toLeftOf="@id/opinions_tv_online"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/pp_px_1"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/opinions_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.pictureair.photopassCopy.widget.CustomTextView
            android:id="@+id/opinions_tv_feedback"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/opinions_feedback"
            android:textSize="@dimen/text_size_16"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:textColor="@color/pp_light_blue"
            android:paddingTop="@dimen/pp_dp_16"
            android:paddingBottom="@dimen/pp_dp_16"
            />

        <ImageView
            android:layout_width="@dimen/pp_dp_30"
            android:layout_height="@dimen/pp_dp_30"
            android:scaleType="centerInside"
            android:layout_marginRight="@dimen/pp_dp_20"
            android:src="@drawable/opinion_feedback"
            android:layout_toLeftOf="@id/opinions_tv_feedback"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/pp_px_1"
        android:background="@color/line_color" />

</LinearLayout>
