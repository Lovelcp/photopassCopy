<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/previewview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <SurfaceView
            android:id="@+id/surfaceView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:id="@+id/magic_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/camera_bg"
            android:visibility="gone" />

        <View
            android:id="@+id/view_focus"
            android:layout_width="@dimen/pp_width_80"
            android:layout_height="@dimen/pp_width_80"
            android:layout_centerInParent="true"
            android:background="@null" />

        <com.pictureair.photopass.widget.RotatetextView
            android:id="@+id/textView_time_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="3"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_60"
            android:visibility="invisible" />

    </RelativeLayout>

    <!-- bottombar  start -->

    <RelativeLayout
        android:id="@+id/camera_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_light">

        <com.pictureair.photopass.widget.RotateView
            android:id="@+id/button2"
            android:layout_width="@dimen/pp_width_40"
            android:layout_height="@dimen/pp_width_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/pp_margin_20"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/imagebutton_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/icon_camera_sel" />

        <com.pictureair.photopass.widget.RotateView
            android:id="@+id/imagebutton_magic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/pp_margin_20"
            android:background="@color/transparent"
            android:padding="@dimen/pp_padding_5"
            android:src="@drawable/magic_btn"
            android:visibility="gone" />
    </RelativeLayout>
    <!-- bottombar  end -->


    <LinearLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/previewview"
        android:background="@color/black"
        android:orientation="horizontal">

        <com.pictureair.photopass.widget.RotateView
            android:id="@+id/camera_return"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/camera_return" />

        <com.pictureair.photopass.widget.RotateView
            android:id="@+id/imageButton_flash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/camera_flash_off" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.pictureair.photopass.widget.RotateView
                android:id="@+id/imageButton_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/camera_time" />

            <com.pictureair.photopass.widget.RotatetextView
                android:id="@+id/textView_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/pp_margin_10"
                android:layout_toRightOf="@id/imageButton_time"
                android:text="0&apos;S"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small_size" />
        </RelativeLayout>

        <com.pictureair.photopass.widget.RotateView
            android:id="@+id/imageButton_switch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/camera_toggle" />
    </LinearLayout>
    <!-- titile  end -->

</RelativeLayout>