<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/pp_padding_20"
    android:paddingLeft="@dimen/pp_padding_8"
    android:paddingRight="@dimen/pp_padding_8"
    android:paddingBottom="@dimen/pp_padding_20"
    android:background="@color/white">

    <ImageView
        android:id="@+id/load_success_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_disney_null_photo"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/pp_margin_16">
        <TextView
            android:id="@+id/load_success_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pp_dark_blue"
            android:textSize="@dimen/text_size_16"
            android:text="1234566788999"
            android:layout_marginTop="@dimen/pp_margin_16"
            android:gravity="center_vertical|left"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/load_success_size"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_12"
                android:text="大小"
                android:gravity="center_vertical|left"
                android:textColor="@color/gray2"
                />
            <TextView
                android:id="@+id/load_success_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="2016-06-16"
                android:gravity="center_vertical|left"
                android:textColor="@color/gray2"
                android:textSize="@dimen/text_size_12"/>

            <TextView
                android:id="@+id/load_success_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="17:59"
                android:gravity="center_vertical|left"
                android:textColor="@color/gray2"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>