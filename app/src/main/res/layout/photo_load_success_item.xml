<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pp_light_gray_background"
    android:paddingBottom="@dimen/pp_dp_8"
    android:paddingLeft="@dimen/pp_dp_8"
    android:paddingRight="@dimen/pp_dp_8"
    android:paddingTop="@dimen/pp_dp_8">

    <RelativeLayout
        android:id="@+id/load_success_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/load_success_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/load_success_video"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@drawable/play" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/load_success_layout"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:id="@+id/load_success_status_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/load_success_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pp_dp_16"
                android:gravity="center"
                android:text="@string/photo_download_complete"
                android:textColor="@color/gray2"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/load_success_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pp_dp_10"
                android:gravity="center"
                android:text="2016-6-20 17:40"
                android:textColor="@color/gray2"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <ImageView
            android:id="@+id/loading_success_img_select"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/nosele"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/load_success_detail"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/load_success_image_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/load_success_shoottime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pp_dp_16"
            android:gravity="center_vertical|left"
            android:text="2016-6-20 17:40"
            android:textColor="@color/pp_dark_blue"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/load_success_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pp_dp_10"
            android:gravity="center_vertical|left"
            android:text="大小"
            android:textColor="@color/gray2"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>
</RelativeLayout>