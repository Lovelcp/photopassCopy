<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/pp_padding_8"
    android:paddingLeft="@dimen/pp_padding_8"
    android:paddingRight="@dimen/pp_padding_8"
    android:paddingBottom="@dimen/pp_padding_8"
    android:background="@color/pp_light_gray_background">

    <ImageView
        android:id="@+id/load_success_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_disney_null_photo"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/pp_margin_16">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/load_success_shoottime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_14"
                android:text="2016-6-20 17:40"
                android:layout_marginTop="@dimen/pp_margin_16"
                android:gravity="center_vertical|left"/>
            <TextView
                android:id="@+id/load_success_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pp_margin_6"
                android:textSize="@dimen/text_size_12"
                android:text="大小"
                android:gravity="center_vertical|left"
                android:textColor="@color/gray2"
                />
        </LinearLayout>>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/load_success_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pp_margin_16"
                android:text="@string/photo_download_complete"
                android:gravity="center"
                android:textColor="@color/gray2"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                android:id="@+id/load_success_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pp_margin_6"
                android:text="2016-6-20 17:40"
                android:gravity="center"
                android:textColor="@color/gray2"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>