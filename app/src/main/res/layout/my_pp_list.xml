<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pp_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_height_40">

            <ImageView
                android:id="@+id/my_pp_miqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/my_pp_miqi" />

            <TextView
                android:id="@+id/pp_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/pp_margin_8"
                android:layout_toRightOf="@+id/my_pp_miqi"
                android:text="PP12345678"
                android:textColor="@color/pp_gray"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:id="@+id/delete_my_pp"
                android:layout_width="@dimen/pp_height_40"
                android:layout_height="@dimen/pp_height_40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:padding="@dimen/pp_margin_8"
                android:layout_marginRight="@dimen/pp_margin_8"
                android:scaleType="centerInside"
                android:src="@drawable/delete_my_pp_btn" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/pp_height_40"
                android:layout_height="@dimen/pp_height_40"
                android:layout_alignBottom="@id/pp_code"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:paddingRight="@dimen/pp_padding_10"
                android:src="@drawable/nosele"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_shoot_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img"
                android:layout_alignParentBottom="true"
                android:textColor="@color/pp_gray"
                android:textSize="@dimen/text_size_14"
                android:layout_marginRight="@dimen/pp_margin_2"
                android:visibility="gone"
               />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/pp_image_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pp_margin_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pp_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pp_margin_5"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_pp" />

            <ImageView
                android:id="@+id/pp_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pp_margin_5"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_pp" />

            <ImageView
                android:id="@+id/pp_img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pp_margin_5"
                android:layout_marginRight="@dimen/pp_margin_5"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_pp" />

            <ImageView
                android:id="@+id/pp_img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_pp" />

            <ImageView
                android:id="@+id/pp_img5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pp_margin_5"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_pp" />

            <ImageView
                android:id="@+id/pp_img6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pp_margin_5"
                android:layout_marginRight="@dimen/pp_margin_5"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_pp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pp_image_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pp_margin_5"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/pp_img7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pp_margin_5"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_pp" />

            <ImageView
                android:id="@+id/pp_img8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pp_margin_5"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_pp" />

            <ImageView
                android:id="@+id/pp_img9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pp_margin_5"
                android:layout_marginRight="@dimen/pp_margin_5"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_pp" />

            <ImageView
                android:id="@+id/pp_img10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_pp" />

            <ImageView
                android:id="@+id/pp_img11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pp_margin_5"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_pp" />

            <RelativeLayout
                android:id="@+id/show_conut_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pp_margin_5"
                android:layout_marginRight="@dimen/pp_margin_5"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/pp_img12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_pp" />

                <TextView
                    android:id="@+id/photo_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>