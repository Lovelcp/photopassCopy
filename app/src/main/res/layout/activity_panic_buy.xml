<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pp_light_gray_background">

    <RelativeLayout
        android:id="@+id/panicbuy_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pp_top_bar_height"
        android:background="@color/pp_blue">

        <ImageView
            android:id="@+id/panicbuy_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/pp_dp_15"
            android:paddingLeft="@dimen/pp_dp_14"
            android:paddingRight="@dimen/pp_dp_14"
            android:paddingTop="@dimen/pp_dp_15"
            android:scaleType="centerInside"
            android:src="@drawable/back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/panic_buy_title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@id/panicbuy_title"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/panicbuy_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/panicbuy_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ppp_back"
                    android:layout_marginTop="30dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginBottom="20dp"
                    >
                    <RelativeLayout
                        android:id="@+id/panicbuy_money_layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <com.pictureair.photopass.widget.CustomTextView
                            android:id="@+id/panicbuy_price"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/pp_blue"
                            android:textSize="25sp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:background="@color/white"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp">
                            <TextView
                                android:id="@+id/panicbuy_hour"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_20"
                                android:gravity="center"
                                android:background="@drawable/bg_round_corner_back_black"/>
                            <TextView
                                android:layout_width="10dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text=":"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                />
                            <TextView
                                android:id="@+id/panicbuy_min"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_20"
                                android:gravity="center"
                                android:background="@drawable/bg_round_corner_back_black"/>
                            <TextView
                                android:layout_width="10dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text=":"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                />
                            <TextView
                                android:id="@+id/panicbuy_sec"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_20"
                                android:gravity="center"
                                android:background="@drawable/bg_round_corner_back_black"
                                />
                        </LinearLayout>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/panicbuy_time_status"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/panicbuy_money_layout"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/text_size_14"
                        android:gravity="center"
                        android:text="抢购即将开始"
                        android:textColor="@color/pp_gray"
                        android:layout_marginTop="@dimen/pp_dp_10"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pp_px_1"
                    android:background="@color/line_color"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:id="@+id/panicbuy_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/pp_dark_blue"
                    android:textSize="@dimen/text_size_18"
                    android:text="单拼迪士尼乐拍通一卡通"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:id="@+id/panicbuy_detail1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/pp_dark_blue"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:gravity="left|center_vertical"
                    android:text="您即可获得绑定至同一张迪士尼乐拍通卡内的所有数码照片!"/>
                <TextView
                    android:id="@+id/panicbuy_detail2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/pp_dark_blue"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:gravity="left|center_vertical"/>
            </LinearLayout>

            <Button
                android:id="@+id/panicbuy_purchase"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="@dimen/text_size_18"
                android:gravity="center"
                android:text="即将开始"
                android:background="@drawable/button_enable_blue_disable_gray_shape_and_selector"
                android:textColor="@drawable/textview_selector_blue_white_gray"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginBottom="16dp"
                android:padding="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignBottom="@id/panicbuy_content"
                />
        </RelativeLayout>
    </ScrollView>
    <com.pictureair.photopass.widget.NoNetWorkOrNoCountView
        android:id="@+id/panicbuy_NoNetWorkView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/panicbuy_title"
        android:visibility="gone" />

</RelativeLayout>