<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pp_light_gray_background"
    tools:context="com.pictureair.photopass.activity.SettingLanguageActivity">

    <LinearLayout
        android:id="@+id/head2"
        style="@style/ImmersiveMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/immersive_color">

        <RelativeLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_top_bar_height"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/back_set"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_above="@+id/language_line"
                android:layout_alignParentLeft="true"
                android:paddingRight="@dimen/pp_dp_10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="@dimen/pp_dp_15"
                    android:paddingLeft="@dimen/pp_dp_14"
                    android:paddingRight="@dimen/pp_dp_14"
                    android:paddingTop="@dimen/pp_dp_15"
                    android:scaleType="centerInside"
                    android:src="@drawable/back_blue" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/setting_language"
                android:textColor="@color/pp_blue"
                android:textSize="@dimen/text_size_16" />

            <View
                android:id="@id/language_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_px_1"
                android:layout_alignParentBottom="true"
                android:background="@color/pp_gray" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head2"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/language_chinese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="@dimen/pp_dp_16"
                android:text="@string/Chinese"
                android:textColor="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/chinese_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/pp_dp_10"
                android:src="@drawable/sele"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_px_1"
            android:layout_marginLeft="@dimen/pp_dp_8"
            android:layout_marginRight="@dimen/pp_dp_8"
            android:background="@color/gray_light3" />

        <RelativeLayout
            android:id="@+id/language_english"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="@dimen/pp_dp_16"
                android:text="@string/English"
                android:textColor="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/english_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/pp_dp_10"
                android:src="@drawable/sele"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_px_1"
            android:layout_marginLeft="@dimen/pp_dp_8"
            android:layout_marginRight="@dimen/pp_dp_8"
            android:background="@color/gray_light3" />
    </LinearLayout>
</RelativeLayout>
