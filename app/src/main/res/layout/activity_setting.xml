<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/head2"
        style="@style/ImmersiveMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/immersive_color">

        <RelativeLayout
            android:id="@+id/tt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_top_bar_height"
            android:background="@color/white">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/set_line"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/pp_dp_15"
                android:paddingLeft="@dimen/pp_dp_14"
                android:paddingRight="@dimen/pp_dp_14"
                android:paddingTop="@dimen/pp_dp_15"
                android:scaleType="centerInside"
                android:src="@drawable/back_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/setting"
                android:textColor="@color/pp_blue"
                android:textSize="@dimen/text_size_16" />

            <View
                android:id="@id/set_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_px_1"
                android:layout_alignParentBottom="true"
                android:background="@color/pp_gray" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@color/pp_light_gray_background"
            android:paddingBottom="@dimen/pp_dp_16"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pp_dp_5"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pp_px_1"
                    android:background="@color/line_color" />

                <TextView
                    android:id="@+id/tv_download"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/pp_dp_16"
                    android:padding="@dimen/pp_dp_16"
                    android:text="@string/download_tpye"
                    android:textColor="@color/pp_blue"
                    android:textSize="@dimen/text_size_16" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pp_px_1"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:id="@+id/rl_gprs_wifi_download"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pp_dp_32"
                    android:layout_marginRight="@dimen/pp_dp_16"
                    android:padding="@dimen/pp_dp_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/gprs_wifi_download"
                        android:textColor="@color/pp_gray"
                        android:textSize="@dimen/text_size_14" />

                    <ImageButton
                        android:id="@+id/ib_gprs_wifi_download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:src="@drawable/nosele" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pp_px_1"
                    android:layout_marginLeft="@dimen/pp_dp_32"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:id="@+id/rl_wifi_only_download"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pp_dp_32"
                    android:layout_marginRight="@dimen/pp_dp_16"
                    android:padding="@dimen/pp_dp_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/wifi_only_download"
                        android:textColor="@color/pp_gray"
                        android:textSize="@dimen/text_size_14" />


                    <ImageButton
                        android:id="@+id/ib_wifi_only_download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:src="@drawable/nosele" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pp_px_1"
                    android:background="@color/line_color" />

                <TextView
                    android:id="@+id/setting_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/pp_dp_16"
                    android:padding="@dimen/pp_dp_16"
                    android:text="@string/mypage_about"
                    android:textColor="@color/pp_blue"
                    android:textSize="@dimen/text_size_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pp_px_1"
                    android:background="@color/line_color" />

                <TextView
                    android:id="@+id/setting_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/pp_dp_16"
                    android:padding="@dimen/pp_dp_16"
                    android:text="@string/setting_language"
                    android:textColor="@color/pp_blue"
                    android:textSize="@dimen/text_size_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pp_px_1"
                    android:background="@color/line_color" />

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/pp_dp_16"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_blue"
                android:padding="@dimen/pp_dp_10"
                android:text="@string/logout"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>