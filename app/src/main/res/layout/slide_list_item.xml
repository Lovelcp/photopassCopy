<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/slide_list_item_select"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/pp_dp_5"
        android:layout_marginRight="@dimen/pp_dp_5"
        android:scaleType="centerInside"
        android:src="@drawable/slide_minus"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/slide_list_item_select"
        android:orientation="vertical">

        <TextView
            android:id="@+id/slide_list_item_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_dp_30"
            android:layout_marginBottom="@dimen/pp_dp_5"
            android:gravity="center_vertical|bottom"
            android:text="2015-01-01"
            android:textColor="@color/pp_dark_blue"
            android:textSize="@dimen/text_size_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pp_dp_5">

            <TextView
                android:id="@+id/slide_list_item_count"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/photo_count"
                android:drawablePadding="@dimen/pp_dp_5"
                android:gravity="center_vertical"
                android:text="@string/story_photo_count"
                android:textColor="@color/pp_blue"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/slide_list_item_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/slide_list_item_count"
                android:gravity="center_vertical"
                android:text="SHDRH3H3H3H3H3H3H"
                android:textColor="@color/pp_light_blue"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>