<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pp_light_gray_background">

    <include
        android:id="@+id/head"
        layout="@layout/top_bar"/>

    <LinearLayout
        android:id="@+id/login_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:layout_marginLeft="@dimen/pp_dp_16"
        android:layout_marginRight="@dimen/pp_dp_16"
        android:layout_marginTop="@dimen/pp_dp_20"
        android:orientation="vertical">


        <com.pictureair.photopass.widget.EditTextWithClear
            android:id="@+id/otherLogin_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/email"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLength="200"
            android:paddingBottom="@dimen/pp_dp_16"
            android:paddingLeft="@dimen/pp_dp_10"
            android:paddingRight="@dimen/pp_dp_5"
            android:textColor="@color/pp_gray"
            android:textColorHint="@color/pp_gray"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_px_1"
            android:background="@color/pp_blue" />


        <com.pictureair.photopass.widget.EditTextWithClear
            android:id="@+id/otherLogin_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pp_dp_16"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/pwd"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/pp_dp_16"
            android:maxLength="200"
            android:paddingLeft="@dimen/pp_dp_10"
            android:paddingRight="@dimen/pp_dp_5"
            android:textColor="@color/pp_gray"
            android:textColorHint="@color/pp_gray"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_px_1"
            android:background="@color/pp_blue" />

        <TextView
            android:id="@+id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/pp_dp_2"
            android:layout_marginTop="@dimen/pp_dp_16"
            android:text="@string/forget_pwd"
            android:textColor="@color/pp_blue"
            android:textSize="@dimen/text_size_16"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnOtherLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pp_dp_64"
            android:background="@drawable/button_blue_shape_and_selector"
            android:padding="@dimen/pp_dp_10"
            android:text="@string/login"
            android:textColor="@drawable/textview_selector_blue_white"
            android:textSize="@dimen/text_size_16" />

        <Button
            android:id="@+id/sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pp_dp_16"
            android:background="@drawable/button_sign_shape_and_selector"
            android:padding="@dimen/pp_dp_10"
            android:text="@string/sign"
            android:textColor="@color/pp_blue"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

</RelativeLayout>