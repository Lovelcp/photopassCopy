<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/pp_dp_10"
    android:layout_marginRight="@dimen/pp_dp_10"
    android:layout_marginTop="@dimen/pp_dp_10"
    android:background="@drawable/button_white">

    <TextView
        android:id="@+id/daily_pp_header_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pp_dp_10"
        android:layout_marginTop="@dimen/pp_dp_10"
        android:text="date"
        android:textColor="@color/pp_gray"
        android:textSize="@dimen/text_size_12" />

    <ImageView
        android:id="@+id/daily_pp_header_logo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/daily_pp_header_date_tv"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/pp_dp_25"
        android:src="@drawable/photopass_logo" />

    <TextView
        android:id="@+id/daily_pp_header_card_no_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/daily_pp_header_logo_iv"
        android:layout_marginLeft="@dimen/pp_dp_10"
        android:text="card no"
        android:textColor="@color/pp_gray"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/daily_pp_header_bottom_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/daily_pp_header_card_no_tv"
        android:layout_marginBottom="@dimen/pp_dp_5"
        android:layout_marginLeft="@dimen/pp_dp_10"
        android:text="tip"
        android:textColor="@color/pp_gray"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/daily_pp_header_buy_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/daily_pp_header_bottom_tip_tv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/pp_dp_10"
        android:drawableTop="@drawable/story_buy"
        android:text="@string/story_want_to_buy"
        android:textColor="@color/pp_gray"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/daily_pp_header_download_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/daily_pp_header_bottom_tip_tv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/pp_dp_10"
        android:drawableTop="@drawable/download_white"
        android:text="@string/down"
        android:textColor="@color/pp_gray"
        android:textSize="@dimen/text_size_14" />

    <RelativeLayout
        android:id="@+id/daily_pp_header_download_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/daily_pp_header_buy_tv"
        android:layout_margin="@dimen/pp_dp_10">

        <View
            android:id="@+id/daily_pp_header_center_v"
            android:layout_width="@dimen/pp_px_1"
            android:layout_height="@dimen/pp_px_1"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/pp_dp_5" />

        <ImageView
            android:id="@+id/daily_pp_header_left_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/daily_pp_header_center_v"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/daily_pp_header_left_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/daily_pp_header_center_v"
            android:layout_alignParentBottom="true"
            android:background="@color/ppp_cover"
            android:gravity="center"
            android:padding="@dimen/pp_dp_5"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:id="@+id/daily_pp_header_right_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/daily_pp_header_center_v"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/daily_pp_header_right_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/daily_pp_header_center_v"
            android:layout_alignParentBottom="true"
            android:background="@color/ppp_cover"
            android:gravity="center"
            android:padding="@dimen/pp_dp_5"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />

    </RelativeLayout>

</RelativeLayout>