<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editStoryPhotoRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pp_light_gray_background" >

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pp_top_bar_height"
        android:layout_alignParentTop="true"
        android:background="@color/pp_blue" >

        <ImageView
            android:id="@+id/rlrt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/pp_padding_13"
            android:paddingLeft="@dimen/pp_margin_16"
            android:paddingRight="@dimen/pp_padding_16"
            android:paddingTop="@dimen/pp_padding_13"
            android:scaleType="centerInside"
            android:src="@drawable/back_white" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/transparent"
            android:text="@string/photopass"
            android:textColor="@color/white"
            android:textSize="@dimen/pp_margin_16"/>

        <ImageView
            android:id="@+id/imageButton_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="8dp"
            android:paddingLeft="@dimen/pp_padding_16"
            android:paddingRight="@dimen/pp_margin_16"
            android:paddingTop="8dp"
            android:visibility="gone"
            android:scaleType="centerInside"
            android:src="@drawable/sel2" />
    </RelativeLayout>
    <!-- android:layout_above="@id/select_tools_linearlayout" -->

    <com.pictureair.photopass.widget.stickygridheaders.StickyGridHeadersGridView
        android:id="@+id/pullToRefreshPinnedSectionListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout1"
        android:background="@color/white"
        android:clipToPadding="true"
        android:horizontalSpacing="5dip"
        android:listSelector="@color/transparent"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="0dip" />
        
    <!-- <com.hb.views.PinnedHeaderExpandableListView
        android:id="@+id/pullToRefreshPinnedSectionListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout1"
        android:cacheColorHint="@null"
        android:divider="@null"
        android:scrollbarAlwaysDrawHorizontalTrack="false" /> -->

    <LinearLayout
        android:id="@+id/select_tools_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/select_disall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/edit_album_disall_button"
            android:gravity="center_horizontal|bottom"
            android:padding="2dp"
            android:text="@string/disall"
            android:textColor="@drawable/textview_selector_onclick"
            android:textSize="@dimen/text_small_size" />

        <TextView
            android:id="@+id/select_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/edit_album_all_button"
            android:gravity="center_horizontal|bottom"
            android:padding="2dp"
            android:text="@string/all"
            android:textColor="@drawable/textview_selector_onclick"
            android:textSize="@dimen/text_small_size" />

        <TextView
            android:id="@+id/select_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/edit_album_share_button"
            android:gravity="center_horizontal|bottom"
            android:padding="2dp"
            android:text="@string/Share"
            android:textColor="@drawable/textview_selector_onclick"
            android:textSize="@dimen/text_small_size" />

        <TextView
            android:id="@+id/select_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/edit_album_delete_button"
            android:gravity="center_horizontal|bottom"
            android:padding="2dp"
            android:text="@string/delete"
            android:textColor="@drawable/textview_selector_onclick"
            android:textSize="@dimen/text_small_size" />

        <TextView
            android:id="@+id/select_makegift"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/edit_album_buy_button"
            android:gravity="center_horizontal|bottom"
            android:padding="2dp"
            android:text="@string/buy"
            android:textColor="@drawable/textview_selector_onclick"
            android:textSize="@dimen/text_small_size" />
    </LinearLayout>

</RelativeLayout>