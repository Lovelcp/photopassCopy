<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pp_light_gray_background">
    <LinearLayout
        android:id="@+id/ll_downloading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/loading_connect"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="12sp"
                    android:text="@string/photo_download_reconnect_all"
                    android:paddingLeft="@dimen/pp_padding_5"
                    android:paddingRight="@dimen/pp_padding_5"
                    android:textColor="@color/pp_dark_blue"
                    android:background="@drawable/button_sign_shape_and_selector"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/loading_clear_fail"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="12sp"
                    android:text="@string/photo_download_clear_failed"
                    android:paddingLeft="@dimen/pp_padding_5"
                    android:paddingRight="@dimen/pp_padding_5"
                    android:textColor="@color/pp_dark_blue"
                    android:background="@drawable/button_sign_shape_and_selector"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_height_2"
            android:background="@drawable/dash_line"
            android:layerType="software"
            />
    <ListView
        android:id="@+id/lv_downloading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/gray_light3"
        android:dividerHeight="@dimen/pp_height_1"
        />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_downloading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:paddingTop="80dp"
        android:background="@color/pp_light_gray_background"

        >
        <ImageView
            android:id="@+id/downloading_show_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/download_manager_download"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/downloading_show_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/downloading_show_img"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/gray2"
            android:text="@string/photo_download_tips"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            />
        <Button
            android:id="@+id/downloading_btn_toload"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="@string/photo_download_to_load"
            android:layout_below="@id/downloading_show_text2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:textColor="@color/gray2"
            android:gravity="center"
            android:background="@drawable/button_translate_with_gray_line"
            />
    </RelativeLayout>


</RelativeLayout>