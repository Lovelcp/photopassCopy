<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/head"
        layout="@layout/top_bar" />

    <com.pictureair.photopass.widget.videoPlayer.PWVideoPlayerManagerView
        android:id="@+id/video_player_pmv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/ll_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_light4"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/pp_padding_8">

            <ImageView
                android:layout_width="@dimen/pp_height_25"
                android:layout_height="@dimen/pp_height_25"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:scaleType="centerInside"
                android:src="@drawable/button_share_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/share"
                android:textColor="@drawable/textview_selector_onclick"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_download"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/pp_padding_8">

            <ImageView
                android:layout_width="@dimen/pp_height_25"
                android:layout_height="@dimen/pp_height_25"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:scaleType="centerInside"
                android:src="@drawable/button_download_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/down"
                android:textColor="@drawable/textview_selector_onclick"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/video_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pp_margin_16"
        android:layout_above="@+id/ll_end"
        android:gravity="center"
        android:textColor="@color/pp_gray"
        android:textSize="@dimen/text_size_12"/>

    <com.pictureair.photopass.widget.NoNetWorkOrNoCountView
        android:id="@+id/storyNoNetWorkView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/head"
        android:visibility="gone" />

</RelativeLayout>