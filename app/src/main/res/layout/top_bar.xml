<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pp_top_bar_height"
    android:layout_alignParentTop="true"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/topLeftView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:onClick="TopViewClick"
        android:orientation="horizontal"
        android:layout_above="@+id/toptitle_line">

        <ImageView
            android:id="@+id/topLeft_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="false"
            android:layout_marginBottom="@dimen/pp_dp_15"
            android:layout_marginLeft="@dimen/pp_dp_14"
            android:layout_marginRight="@dimen/pp_dp_14"
            android:layout_marginTop="@dimen/pp_dp_15"
            android:scaleType="centerInside"
            android:src="@drawable/back_blue"
            android:visibility="gone" />

        <TextView
            android:id="@+id/topLeft_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="false"
            android:layout_marginLeft="@dimen/pp_dp_14"
            android:layout_marginTop="@dimen/pp_dp_10"
            android:layout_marginBottom="@dimen/pp_dp_10"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:gravity="center"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/topTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/pp_blue"
        android:textSize="@dimen/text_size_16" />

    <LinearLayout
        android:id="@+id/topRightView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:onClick="TopViewClick"
        android:orientation="horizontal"
        android:layout_above="@+id/toptitle_line"
        >

        <ImageView
            android:id="@+id/topRight_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="false"
            android:layout_marginBottom="@dimen/pp_dp_15"
            android:layout_marginLeft="@dimen/pp_dp_14"
            android:layout_marginRight="@dimen/pp_dp_14"
            android:layout_marginTop="@dimen/pp_dp_15"
            android:scaleType="centerInside"
            android:src="@drawable/edit_album_all_enable"
            android:visibility="gone" />

        <TextView
            android:id="@+id/topRight_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/pp_dp_14"
            android:layout_marginTop="@dimen/pp_dp_10"
            android:layout_marginBottom="@dimen/pp_dp_10"
            android:clickable="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14"
            android:gravity="center"
            android:visibility="gone" />

    </LinearLayout>
    <View
        android:id="@id/toptitle_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pp_px_1"
        android:background="@color/pp_gray"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>