<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pp_top_bar_height"
    android:layout_alignParentTop="true"
    android:background="@color/pp_blue">

    <LinearLayout
        android:id="@+id/topLeftView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:onClick="TopViewClick"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/topLeft_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:paddingBottom="@dimen/pp_padding_13"
            android:paddingLeft="@dimen/pp_padding_16"
            android:paddingRight="@dimen/pp_padding_16"
            android:paddingTop="@dimen/pp_padding_13"
            android:scaleType="centerInside"
            android:src="@drawable/back_white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/topLeft_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/topTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16" />

    <LinearLayout
        android:id="@+id/topRightView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:onClick="TopViewClick"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/topRight_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:paddingBottom="@dimen/pp_padding_13"
            android:paddingTop="@dimen/pp_padding_13"
            android:paddingRight="@dimen/pp_padding_16"
            android:paddingLeft="@dimen/pp_padding_16"
            android:scaleType="centerInside"
            android:src="@drawable/preview_save"
            android:visibility="gone" />

        <TextView
            android:id="@+id/topRight_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/pp_padding_16"
            android:paddingTop="@dimen/pp_padding_10"
            android:paddingBottom="@dimen/pp_margin_10"
            android:clickable="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>