<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pp_light_gray_background">

    <include
        android:id="@+id/head"
        layout="@layout/top_bar" />


    <RelativeLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:padding="@dimen/pp_padding_10">

        <cn.smssdk.gui.EditTextWithClear
            android:id="@+id/input_manaul_edittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_height_40"
            android:layout_weight="1"
            android:background="@drawable/button_input_shape"
            android:digits="@string/input_content"
            android:imeOptions="actionDone"
            android:paddingLeft="@dimen/pp_padding_10"
            android:paddingRight="@dimen/pp_padding_10"
            android:layout_marginTop="@dimen/pp_margin_60"
            android:maxLength="200"
            android:singleLine="true"
            android:textColor="@color/pp_gray"
            android:textColorHint="@color/pp_gray"
            android:textSize="@dimen/text_size_16" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_manul_input_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_input"
        android:layout_marginTop="@dimen/pp_margin_20"
        android:padding="@dimen/pp_margin_20"
        android:text="@string/manul_input_intro"
        android:textColor="@color/pp_dark_blue"
        android:textSize="@dimen/text_size_16" />

    <Button
        android:id="@+id/sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/pp_margin_20"
        android:layout_marginLeft="@dimen/pp_margin_20"
        android:layout_marginRight="@dimen/pp_margin_20"
        android:background="@drawable/button_blue_shape_and_selector"
        android:padding="@dimen/pp_padding_10"
        android:text="@string/ok"
        android:textColor="@drawable/textview_selector_blue_white"
        android:textSize="@dimen/text_size_16" />

</RelativeLayout>