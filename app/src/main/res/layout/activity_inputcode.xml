<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pp_light_gray_background">

    <include
        android:id="@+id/head"
        layout="@layout/top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pp_top_bar_height"
        android:layout_alignParentTop="true"></include>

    <LinearLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/head"
        android:layout_marginTop="60dp"
        android:padding="10dp">

    <EditText
        android:id="@+id/input1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:imeOptions="actionGo"
        android:maxLength="4"
        android:ems="4"
        android:background="@null"
        android:gravity="center"
        android:singleLine="true"
        android:layout_weight="1"
        android:textColor="@color/pp_gray"
        android:textColorHint="@color/pp_gray"
        android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/input2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:imeOptions="actionGo"
            android:maxLength="4"
            android:ems="4"
            android:background="@null"
            android:gravity="center"
            android:singleLine="true"
            android:layout_weight="1"
            android:textColor="@color/pp_gray"
            android:textColorHint="@color/pp_gray"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/input3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:imeOptions="actionGo"
            android:maxLength="4"
            android:ems="4"
            android:background="@null"
            android:gravity="center"
            android:singleLine="true"
            android:layout_weight="1"
            android:textColor="@color/pp_gray"
            android:textColorHint="@color/pp_gray"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/input4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:imeOptions="actionGo"
            android:maxLength="4"
            android:ems="4"
            android:background="@null"
            android:gravity="center"
            android:singleLine="true"
            android:layout_weight="1"
            android:textColor="@color/pp_gray"
            android:textColorHint="@color/pp_gray"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

    <View
        android:id="@+id/input_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/layout_input"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/pp_blue" />

    <Button
        android:id="@+id/sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_input"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_blue_shape_and_selector"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:padding="10dp"
        android:text="@string/ok"
        android:textColor="@drawable/textview_selector_blue_white"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sure"
        android:padding="40dp"
        android:text="@string/manul_input_intro"
        android:textColor="@color/pp_blue"
        android:textSize="@dimen/text_size_16" />

</RelativeLayout>