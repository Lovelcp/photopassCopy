<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pp_light_gray_background">

    <include
        android:id="@+id/head"
        layout="@layout/top_bar" />

    <TextView
        android:id="@+id/tv_confirm_hint"
        android:gravity="center"
        android:visibility="invisible"
        android:layout_margin="@dimen/pp_margin_20"
        android:layout_below="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm_ppp_code_text_hint"
        android:textColor="@color/pp_gray"
        android:textSize="@dimen/text_size_16"/>

    <LinearLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_confirm_hint"
        android:orientation="horizontal"
        android:padding="@dimen/pp_padding_10">


        <EditText
            android:id="@+id/input1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_input_shape"
            android:ems="4"
            android:digits="@string/input_content"
            android:gravity="center"
            android:imeOptions="actionGo"
            android:singleLine="true"
            android:textColor="@color/pp_gray"
            android:textColorHint="@color/pp_gray"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="@dimen/pp_height_10"
            android:layout_height="@dimen/pp_height_1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/pp_dark_blue" />

        <EditText
            android:id="@+id/input2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_input_shape"
            android:ems="4"
            android:gravity="center"
            android:imeOptions="actionGo"
            android:singleLine="true"
            android:textColor="@color/pp_gray"
            android:textColorHint="@color/pp_gray"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="@dimen/pp_height_10"
            android:layout_height="@dimen/pp_height_1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/pp_dark_blue" />

        <EditText
            android:id="@+id/input3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_input_shape"
            android:ems="4"
            android:gravity="center"
            android:imeOptions="actionGo"
            android:singleLine="true"
            android:textColor="@color/pp_gray"
            android:textColorHint="@color/pp_gray"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="@dimen/pp_height_10"
            android:layout_height="@dimen/pp_height_1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/pp_dark_blue" />

        <EditText
            android:id="@+id/input4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_height_40"
            android:layout_weight="1"
            android:background="@drawable/button_input_shape"
            android:ems="4"
            android:gravity="center"
            android:imeOptions="actionGo"
            android:maxLength="4"
            android:singleLine="true"
            android:textColor="@color/pp_gray"
            android:textColorHint="@color/pp_gray"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

    <!--<View-->
        <!--android:id="@+id/input_line"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/pp_height_1"-->
        <!--android:layout_below="@id/layout_input"-->
        <!--android:layout_marginLeft="@dimen/pp_margin_10"-->
        <!--android:layout_marginRight="@dimen/pp_margin_10"-->
        <!--android:background="@color/pp_blue" />-->



    <ImageView
        android:id="@+id/iv_show_result"
        android:layout_below="@+id/layout_input"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:paddingLeft="@dimen/pp_padding_10"
        android:paddingRight="@dimen/pp_padding_10"/>

    <TextView
        android:id="@+id/tv_manul_input_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_input"
        android:padding="@dimen/pp_margin_40"
        android:text="@string/manul_input_intro"
        android:textColor="@color/pp_blue"
        android:textSize="@dimen/text_size_16" />

    <Button
        android:id="@+id/sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pp_margin_20"
        android:layout_marginRight="@dimen/pp_margin_20"
        android:background="@drawable/button_blue_shape_and_selector"
        android:padding="@dimen/pp_padding_10"
        android:layout_alignParentBottom="true"
        android:text="@string/ok"
        android:layout_marginBottom="@dimen/pp_margin_20"
        android:textColor="@drawable/textview_selector_blue_white"
        android:textSize="@dimen/text_size_16" />

    <LinearLayout
        android:id="@+id/lv_buttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/pp_margin_16" >

        <Button
            android:id="@+id/btn_confirm_scan_ppp_code"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_blue_shape_and_selector"
            android:padding="@dimen/pp_padding_10"
            android:textColor="@drawable/textview_selector_blue_white"
            android:text="@string/ok"
            android:textSize="@dimen/pp_margin_16" />

        <Button
            android:id="@+id/btn_re_scan_ppp_code"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_sign_shape_and_selector"
            android:padding="@dimen/pp_padding_10"
            android:text="@string/re_scan"
            android:layout_marginTop="@dimen/pp_margin_16"
            android:textColor="@color/pp_blue"
            android:textSize="@dimen/pp_margin_16" />
    </LinearLayout>


</RelativeLayout>