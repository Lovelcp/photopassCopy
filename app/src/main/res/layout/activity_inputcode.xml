<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pp_light_gray_background">

    <include
        android:id="@+id/head"
        layout="@layout/top_bar" />

    <LinearLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:layout_marginTop="@dimen/pp_height_60"
        android:orientation="horizontal"
        android:padding="@dimen/pp_padding_16">

        <EditText
            android:id="@+id/input1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ems="4"
            android:gravity="center"
            android:imeOptions="actionGo"
            android:maxLength="4"
            android:singleLine="true"
            android:textColor="@color/pp_gray"
            android:textColorHint="@color/pp_gray"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="@dimen/pp_height_10"
            android:layout_height="@dimen/pp_height_1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/pp_dark_blue" />

        <EditText
            android:id="@+id/input2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ems="4"
            android:gravity="center"
            android:imeOptions="actionGo"
            android:maxLength="4"
            android:singleLine="true"
            android:textColor="@color/pp_gray"
            android:textColorHint="@color/pp_gray"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="@dimen/pp_height_10"
            android:layout_height="@dimen/pp_height_1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/pp_dark_blue" />

        <EditText
            android:id="@+id/input3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ems="4"
            android:gravity="center"
            android:imeOptions="actionGo"
            android:maxLength="4"
            android:singleLine="true"
            android:textColor="@color/pp_gray"
            android:textColorHint="@color/pp_gray"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="@dimen/pp_height_10"
            android:layout_height="@dimen/pp_height_1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/pp_dark_blue" />

        <EditText
            android:id="@+id/input4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ems="4"
            android:gravity="center"
            android:imeOptions="actionGo"
            android:maxLength="4"
            android:singleLine="true"
            android:textColor="@color/pp_gray"
            android:textColorHint="@color/pp_gray"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

    <View
        android:id="@+id/input_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pp_height_1"
        android:layout_below="@id/layout_input"
        android:layout_marginLeft="@dimen/pp_margin_16"
        android:layout_marginRight="@dimen/pp_margin_16"
        android:background="@color/pp_blue" />

    <Button
        android:id="@+id/sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_input"
        android:layout_marginLeft="@dimen/pp_margin_20"
        android:layout_marginRight="@dimen/pp_margin_20"
        android:layout_marginTop="@dimen/pp_margin_40"
        android:background="@drawable/button_blue_shape_and_selector"
        android:padding="@dimen/pp_padding_10"
        android:text="@string/ok"
        android:textColor="@drawable/textview_selector_blue_white"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sure"
        android:padding="@dimen/pp_margin_40"
        android:text="@string/manul_input_intro"
        android:textColor="@color/pp_blue"
        android:textSize="@dimen/text_size_16" />

</RelativeLayout>