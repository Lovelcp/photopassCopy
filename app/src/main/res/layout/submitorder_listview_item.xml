<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/pp_margin_16">

    <RelativeLayout
        android:id="@+id/submitOrderRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/imageView_pd"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:background="@color/pp_light_gray_normal"
            android:src="@drawable/ic_stub" />

        <TextView
            android:id="@+id/textView_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imageView_pd"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/textView_pr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/pp_gray"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/textView_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@id/textView_pr"
            android:textColor="@color/pp_gray"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/editText_count1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageView_pd"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="4dp"
            android:textColor="@color/pp_gray"
            android:textSize="@dimen/text_size_12" />

        <ImageView
            android:id="@+id/showOrHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageView_pd"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:src="@drawable/good_show_photo"
            android:visibility="gone" />
    </RelativeLayout>

    <GridLayout
        android:id="@+id/gridView_cartphoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pp_margin_16"
        android:layout_marginRight="@dimen/pp_margin_16"
        android:layout_marginTop="@dimen/pp_margin_8"
        android:background="@drawable/bg_border_stroke"
        android:columnCount="4"
        android:orientation="horizontal"
        android:padding="@dimen/pp_padding_10"
        android:useDefaultMargins="true"></GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/pp_margin_8"
        android:layout_marginLeft="@dimen/pp_margin_16"
        android:layout_marginTop="@dimen/pp_margin_8"
        android:background="@color/pp_light_gray_normal" />

</LinearLayout>