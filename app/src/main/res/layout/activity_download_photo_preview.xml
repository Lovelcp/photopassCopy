<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/download_preview_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pp_top_bar_height"
        android:layout_alignParentTop="true"
        android:background="@color/pp_blue" >

        <ImageView
            android:id="@+id/download_preview_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/pp_padding_15"
            android:paddingLeft="@dimen/pp_padding_14"
            android:paddingRight="@dimen/pp_padding_14"
            android:paddingTop="@dimen/pp_padding_15"
            android:scaleType="centerInside"
            android:src="@drawable/back_white" />

        <TextView
            android:id="@+id/download_preview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_toLeftOf="@+id/download_preview_love"
            android:layout_toRightOf="@id/download_preview_back"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:text="@string/photo_download_preview"/>
        <ImageButton
            android:id="@+id/download_preview_love"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:paddingBottom="@dimen/pp_padding_15"
            android:paddingLeft="@dimen/pp_padding_14"
            android:paddingRight="@dimen/pp_padding_14"
            android:paddingTop="@dimen/pp_padding_15"
            android:scaleType="centerInside"
            android:src="@drawable/discover_no_like"
            android:visibility="invisible"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/download_preview_index_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/pp_light_gray_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pp_padding_5"
        android:paddingTop="@dimen/pp_padding_5" >

        <TextView
            android:id="@+id/download_preview_photo_ad_intro_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pp_margin_16"
            android:layout_marginRight="@dimen/pp_margin_16"
            android:layout_marginBottom="@dimen/pp_margin_16"
            android:gravity="center"
            android:textColor="@color/pp_dark_blue"
            android:textSize="@dimen/text_size_16"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/download_preview_index_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/pp_padding_16"
                android:paddingRight="@dimen/pp_margin_40"
                android:paddingTop="@dimen/pp_padding_5"
                android:paddingBottom="@dimen/pp_padding_5"
                android:text="&lt;"
                android:textColor="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_20"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/download_preview_current_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_16"/>

            <TextView
                android:id="@+id/download_preview_index_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/pp_margin_40"
                android:paddingRight="@dimen/pp_padding_16"
                android:paddingTop="@dimen/pp_padding_5"
                android:paddingBottom="@dimen/pp_padding_5"
                android:text="&gt;"
                android:textColor="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_20"
                android:visibility="invisible"/>
        </LinearLayout>

        <TextView
            android:id="@+id/download_preview_index_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pp_gray"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/download_preview_fra_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pp_light_gray_background"
        android:layout_below="@id/download_preview_titlebar"
        android:layout_above="@id/download_preview_index_bar">

        <com.pictureair.photopass.GalleryWidget.GalleryViewPager
            android:id="@+id/download_preview_viewer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pp_light_gray_background" />
    </RelativeLayout>

</RelativeLayout>