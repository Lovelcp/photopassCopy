<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pp_light_gray_background">
    <LinearLayout
        android:id="@+id/ll_load_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/pp_padding_8"
            android:paddingRight="@dimen/pp_padding_8">
            <TextView
                android:id="@+id/load_success_tv"
                android:layout_width="260dp"
                android:layout_height="80dp"
                android:textSize="12sp"
                android:lineSpacingExtra="4dp"
                android:text="@string/photo_download_tips2"
                android:gravity="left|center_vertical"
                android:paddingRight="@dimen/pp_margin_20"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <Button
                android:id="@+id/load_success_clear"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="@string/photo_download_clear"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/load_success_tv"
                android:layout_marginLeft="@dimen/pp_margin_10"
                android:layout_marginRight="@dimen/pp_margin_10"
                android:textColor="@color/pp_dark_blue"
                android:background="@drawable/button_sign_shape_and_selector"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_height_2"
            android:background="@drawable/dash_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ListView
            android:id="@+id/lv_load_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/gray_light3"
            android:dividerHeight="@dimen/pp_height_2"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_load_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:paddingTop="80dp"
        android:background="@color/pp_light_gray_background"
        >
        <ImageView
            android:id="@+id/load_success_show_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/download_manager_download"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/load_success_show_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/load_success_show_img"
            android:textSize="20sp"
            android:text="@string/photo_download_nothing"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textColor="@color/pp_dark_blue"/>

        <TextView
            android:id="@+id/load_success_show_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/load_success_show_text1"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/gray2"
            android:text="@string/photo_download_tips"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />
        <Button
            android:id="@+id/load_success_btn_toload"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="@string/photo_download_to_load"
            android:layout_below="@id/load_success_show_text2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:textColor="@color/gray2"
            android:gravity="center"
            android:background="@drawable/button_translate_with_gray_line"
            />
    </RelativeLayout>

</LinearLayout>