<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ImmersiveMode"
    android:background="@color/pp_light_gray_background">

    <include
        android:id="@+id/head"
        layout="@layout/top_bar" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:layout_marginTop="@dimen/pp_dp_16"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_px_1"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/item_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/user_item_select"
            android:gravity="center_vertical"
            android:padding="@dimen/pp_dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/pp_dp_2"
                android:text="@string/nn"
                android:textColor="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/pp_dp_2"
                android:text="@string/add"
                android:textColor="@color/pp_light_gray_press"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pp_px_1"
            android:layout_marginLeft="@dimen/pp_dp_10"
            android:layout_marginRight="@dimen/pp_dp_10"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/item_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/user_item_select"
            android:padding="@dimen/pp_dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/pp_dp_2"
                android:text="@string/gender"
                android:textColor="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/pp_dp_2"
                android:text="@string/add"
                android:textColor="@color/pp_light_gray_press"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_px_1"
            android:background="@color/line_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:layout_marginTop="@dimen/pp_dp_16"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_px_1"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/item_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/user_item_select"
            android:padding="@dimen/pp_dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/pp_dp_2"
                android:text="@string/date_of_birth"
                android:textColor="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/pp_dp_2"
                android:text="@string/add"
                android:textColor="@color/pp_light_gray_press"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_px_1"
            android:layout_marginLeft="@dimen/pp_dp_10"
            android:layout_marginRight="@dimen/pp_dp_10"
            android:background="@color/line_color"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/item_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/user_item_select"
            android:padding="@dimen/pp_dp_16"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/pp_dp_2"
                android:text="@string/country"
                android:textColor="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/country_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/pp_dp_2"
                android:text="@string/add"
                android:textColor="@color/pp_light_gray_press"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pp_px_1"
            android:layout_marginLeft="@dimen/pp_dp_10"
            android:layout_marginRight="@dimen/pp_dp_10"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/item_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/user_item_select"
            android:padding="@dimen/pp_dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/pp_dp_2"
                android:text="@string/account"
                android:textColor="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/account_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/pp_dp_2"
                android:maxWidth="@dimen/pp_dp_150"
                android:singleLine="true"
                android:text="@string/add"
                android:textColor="@color/pp_light_gray_press"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pp_px_1"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/item_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/user_item_select"
            android:padding="@dimen/pp_dp_16"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/pp_dp_2"
                android:text="@string/qq"
                android:textColor="@color/pp_blue"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/pp_dp_2"
                android:maxWidth="@dimen/pp_dp_150"
                android:singleLine="true"
                android:textColor="@color/pp_light_gray_press"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll2"
        android:layout_marginTop="@dimen/pp_dp_16"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_px_1"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/item_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/user_item_select"
            android:padding="@dimen/pp_dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/pp_dp_2"
                android:text="@string/modify"
                android:textColor="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_px_1"
            android:background="@color/line_color" />
    </LinearLayout>

</RelativeLayout>