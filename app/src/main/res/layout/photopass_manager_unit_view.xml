<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pp_manager_photo_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/default_pp" />

    <ImageView
        android:id="@+id/pp_manager_video_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pp_manager_photo_iv"
        android:layout_alignRight="@+id/pp_manager_photo_iv"
        android:scaleType="centerInside"
        android:src="@drawable/play" />

    <TextView
        android:id="@+id/pp_manager_photo_count_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_20" />

</RelativeLayout>
