<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg_update_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pictureair.photopassCopy.activity.UpdateUserinfoActivity">

    <LinearLayout
        android:id="@+id/head2"
        style="@style/ImmersiveMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/immersive_color">

        <include
            android:id="@+id/head"
            layout="@layout/top_bar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head2"
        android:background="@color/pp_light_gray_background"
        android:orientation="vertical"
        android:padding="@dimen/pp_dp_16">

        <com.pictureair.photopassCopy.widget.EditTextWithClear
            android:id="@+id/et_userinfo_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:hint="@string/nn"
            android:imeOptions="actionDone"
            android:maxLength="200"
            android:maxLines="1"
            android:paddingLeft="@dimen/pp_dp_10"
            android:paddingRight="@dimen/pp_dp_5"
            android:paddingTop="@dimen/pp_dp_16"
            android:textColor="@color/pp_dark_blue"
            android:textColorHint="@color/pp_gray"
            android:textSize="@dimen/text_size_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_dp_1"
            android:layout_marginTop="@dimen/pp_dp_8"
            android:background="@color/pp_blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pp_dp_16"
            android:background="@drawable/button_blue"
            android:padding="@dimen/pp_dp_10"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>
</RelativeLayout>