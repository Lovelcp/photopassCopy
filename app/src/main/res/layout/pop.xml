<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_marginRight="@dimen/pp_margin_5"
    android:background="@drawable/pop_bg3"
    android:orientation="vertical">


    <TextView
        android:id="@+id/storyEditTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/pop_edit_button"
        android:drawablePadding="@dimen/pp_padding_5"
        android:gravity="left|center_vertical"
        android:paddingBottom="@dimen/pp_padding_10"
        android:paddingLeft="@dimen/pp_padding_20"
        android:paddingRight="@dimen/pp_padding_20"
        android:text="@string/story_select"
        android:textColor="@drawable/textview_selector"
        android:textSize="@dimen/text_size_16" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/pp_height_1"
        android:layout_marginLeft="@dimen/pp_margin_2"
        android:layout_marginRight="@dimen/pp_margin_2"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/storySelectTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/pop_selection_button"
        android:drawablePadding="@dimen/pp_padding_5"
        android:gravity="left|center_vertical"
        android:paddingBottom="@dimen/pp_padding_10"
        android:paddingLeft="@dimen/pp_padding_20"
        android:paddingRight="@dimen/pp_padding_20"
        android:paddingTop="@dimen/pp_padding_10"
        android:text="@string/discover_selection"
        android:textColor="@drawable/textview_selector"
        android:textSize="@dimen/text_size_16" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/pp_height_1"
        android:layout_marginLeft="@dimen/pp_margin_2"
        android:layout_marginRight="@dimen/pp_margin_2"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/storyCollectTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/pop_collection_button"
        android:drawablePadding="@dimen/pp_padding_5"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/pp_margin_20"
        android:paddingRight="@dimen/pp_padding_20"
        android:paddingTop="@dimen/pp_padding_10"
        android:text="@string/favourite"
        android:textColor="@drawable/textview_selector"
        android:textSize="@dimen/text_size_16" />

</LinearLayout>