<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_marginRight="5dp"
    android:background="@drawable/pop_bg3"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/storyEditTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/pop_edit_button"
        android:drawablePadding="5dp"
        android:gravity="left|center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/story_select"
        android:textColor="@drawable/textview_selector"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/storySelectTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/pop_selection_button"
        android:drawablePadding="5dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:text="@string/discover_selection"
        android:textColor="@drawable/textview_selector"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/storyCollectTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/pop_collection_button"
        android:drawablePadding="5dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:text="@string/favourite"
        android:textColor="@drawable/textview_selector"
        android:textSize="15sp" />

</LinearLayout>