<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pp_light_gray_background">

    <LinearLayout
        android:id="@+id/head2"
        style="@style/ImmersiveMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/immersive_color">

        <include
            android:id="@+id/head"
            layout="@layout/top_bar" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/pay_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pay_ll"
        android:layout_below="@+id/head2"
        android:background="@color/pp_light_gray_background"
        android:paddingTop="5dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_dp_60"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/pp_dp_16"
                android:drawableLeft="@drawable/paymentmethods"
                android:drawablePadding="@dimen/pp_dp_16"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/pp_dp_16"
                android:paddingTop="@dimen/pp_dp_16"
                android:text="@string/payment_ways"
                android:textColor="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_px_1"
                android:background="@color/line_color"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/yl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_dp_60"
                android:layout_marginLeft="@dimen/pp_dp_16"
                android:paddingBottom="@dimen/pp_dp_8"
                android:paddingLeft="1dp"
                android:paddingTop="@dimen/pp_dp_8"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/yl" />

                <ImageView
                    android:id="@+id/imageButton2_yhk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/pp_dp_16"
                    android:src="@drawable/sele" />

                <TextView
                    android:id="@+id/textView_yl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/pp_dp_16"
                    android:layout_toRightOf="@id/imageView2"
                    android:text="@string/yhkzf"
                    android:textColor="@color/pp_dark_blue"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_dp_5"
                android:background="@color/pp_light_gray_background" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_dp_60"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/pp_dp_16"
                android:drawableLeft="@drawable/other_paymentmethods"
                android:drawablePadding="@dimen/pp_dp_16"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/pp_dp_16"
                android:paddingTop="@dimen/pp_dp_16"
                android:text="@string/other_payment_ways"
                android:textColor="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_px_1"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/zfb"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_dp_60"
                android:layout_marginLeft="@dimen/pp_dp_16"
                android:paddingBottom="@dimen/pp_dp_8"
                android:paddingTop="@dimen/pp_dp_8">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/yl"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/imageButton1_zfb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/pp_dp_16"
                    android:src="@drawable/sele" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/pp_dp_16"
                    android:text="@string/zfbzf"
                    android:textColor="@color/pp_dark_blue"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_px_1"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/weixin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_dp_60"
                android:layout_marginLeft="@dimen/pp_dp_16"
                android:paddingBottom="@dimen/pp_dp_8"
                android:paddingTop="@dimen/pp_dp_8">

                <ImageView
                    android:id="@+id/imageButton2_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/pp_dp_16"
                    android:src="@drawable/sele" />

                <TextView
                    android:id="@+id/textView_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/pp_dp_16"
                    android:text="@string/wxzf"
                    android:textColor="@color/pp_dark_blue"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_px_1"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/paytype_visa"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_dp_60"
                android:layout_marginLeft="@dimen/pp_dp_16"
                android:paddingBottom="@dimen/pp_dp_8"
                android:paddingTop="@dimen/pp_dp_8"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageButton_payvisa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/pp_dp_16"
                    android:src="@drawable/sele" />

                <TextView
                    android:id="@+id/textView_payvisa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/pp_dp_16"
                    android:text="@string/payvisa"
                    android:textColor="@color/pp_dark_blue"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_px_1"
                android:background="@color/line_color"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/paytype_mc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_dp_60"
                android:layout_marginLeft="@dimen/pp_dp_16"
                android:paddingBottom="@dimen/pp_dp_8"
                android:paddingTop="@dimen/pp_dp_8"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageButton_paymc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/pp_dp_16"
                    android:src="@drawable/sele" />

                <TextView
                    android:id="@+id/textView_paymc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/pp_dp_16"
                    android:text="@string/paymc"
                    android:textColor="@color/pp_dark_blue"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_px_1"
                android:background="@color/line_color"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/paytype_jcb"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_dp_60"
                android:layout_marginLeft="@dimen/pp_dp_16"
                android:paddingBottom="@dimen/pp_dp_8"
                android:paddingTop="@dimen/pp_dp_8"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageButton_payjcb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/pp_dp_16"
                    android:src="@drawable/sele" />

                <TextView
                    android:id="@+id/textView_paypal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/pp_dp_16"
                    android:text="@string/payjcb"
                    android:textColor="@color/pp_dark_blue"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_px_1"
                android:background="@color/line_color"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/no_pay_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head2"
        android:background="@color/pp_light_gray_background"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/pp_dp_80"
            android:layout_height="@dimen/pp_dp_80"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/pp_dp_100"
            android:scaleType="centerInside"
            android:src="@drawable/icon_no_pay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/pp_dp_20"
            android:text="@string/submit_order"
            android:textColor="@color/pp_gray"
            android:textSize="@dimen/text_size_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/pp_dp_8"
            android:text="@string/no_pay_tips"
            android:textColor="@color/pp_gray"
            android:textSize="@dimen/text_size_16"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pay_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <TextView
            android:id="@+id/button_smpm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pp_dp_16"
            android:background="@drawable/button_blue"
            android:gravity="center"
            android:padding="@dimen/pp_dp_10"
            android:text="@string/submitpayment"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>
</RelativeLayout>