<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/view_mask"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_video_popup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pp_margin_16"
                android:gravity="center_horizontal"
                android:text="@string/magic_in_the_making"
                android:textColor="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pp_margin_10"
                android:gravity="center_horizontal"
                android:text="@string/we_will_send_you_to"
                android:textSize="@dimen/text_small_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pp_margin_5"
                android:gravity="center_horizontal"
                android:text="@string/my_disney_story_once_it_is_ready"
                android:textSize="@dimen/text_small_size" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pp_margin_16"
                android:background="@drawable/button_blue_shape_and_selector"
                android:padding="@dimen/pp_padding_10"
                android:text="@string/ok"
                android:textColor="@drawable/textview_selector_blue_white"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
