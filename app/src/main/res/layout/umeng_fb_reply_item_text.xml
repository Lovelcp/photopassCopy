<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <View
        android:id="@+id/umeng_fb_reply_item_view_tag"
        android:layout_width="@dimen/pp_height_5"
        android:layout_height="fill_parent"
        android:background="@color/umeng_fb_lightblue"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/umeng_fb_reply_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pp_margin_10"
            android:layout_marginStart="@dimen/pp_margin_10"
            android:layout_marginTop="@dimen/pp_margin_8"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/pp_padding_10"
            android:textColor="@color/gray"
            android:textSize="@dimen/umeng_fb_item_content_size" />

        <TextView
            android:id="@+id/umeng_fb_reply_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/umeng_fb_reply_date"
            android:layout_marginLeft="@dimen/pp_margin_10"
            android:layout_marginStart="@dimen/pp_height_10"
            android:layout_marginTop="@dimen/pp_margin_2"
            android:background="@drawable/communicate_dialog"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/pp_padding_4"
            android:paddingLeft="@dimen/pp_padding_5"
            android:paddingRight="@dimen/pp_padding_5"
            android:paddingTop="@dimen/pp_padding_4"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:id="@+id/umeng_fb_resend"
            android:layout_width="@dimen/pp_height_20"
            android:layout_height="@dimen/pp_height_20"
            android:layout_alignBottom="@+id/umeng_fb_reply_content"
            android:layout_below="@+id/umeng_fb_reply_date"
            android:layout_marginLeft="@dimen/pp_margin_10"
            android:layout_marginStart="@dimen/pp_margin_10"
            android:layout_toEndOf="@+id/umeng_fb_reply_date"
            android:layout_toRightOf="@+id/umeng_fb_reply_date"
            android:contentDescription="@string/umeng_fb_send"
            android:visibility="gone" />

        <View
            android:id="@+id/umeng_fb_reply_item_view_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/umeng_fb_item_line_height"
            android:layout_below="@+id/umeng_fb_reply_content"
            android:layout_marginTop="@dimen/pp_margin_5"
            android:background="@color/umeng_fb_lightblue" />
    </RelativeLayout>

</LinearLayout>