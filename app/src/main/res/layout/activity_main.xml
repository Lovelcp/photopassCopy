<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_divider" />

    <ImageView
        android:id="@+id/main_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pp_height_1"
        android:layout_above="@+id/main_bottom_bar"
        android:background="@color/pp_gray" />

    <LinearLayout
        android:id="@+id/main_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_65"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_light4"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/main_photo_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/pp_padding_4"
            android:paddingTop="@dimen/pp_padding_4">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/main_photo_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:adjustViewBounds="true"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/tab_photo_btn" />

                <com.pictureair.photopass.widget.dropview.WaterDrop
                    android:id="@+id/waterdrop"
                    android:layout_width="@dimen/pp_height_10"
                    android:layout_height="@dimen/pp_height_10"
                    android:layout_alignRight="@+id/main_photo_iv"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/main_photo_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
                android:text="@string/tab_story"
                android:textColor="@drawable/tab_selector_onclick"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_discover_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/pp_padding_4"
            android:paddingTop="@dimen/pp_padding_4">

            <ImageView
                android:id="@+id/main_discover_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:adjustViewBounds="true"
                android:focusable="false"
                android:scaleType="centerInside"
                android:src="@drawable/tab_discover_btn" />

            <TextView
                android:id="@+id/main_discover_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
                android:text="@string/tab_discover"
                android:textColor="@drawable/tab_selector_onclick"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_shop_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/pp_padding_4"
            android:paddingTop="@dimen/pp_padding_4">

            <ImageView
                android:id="@+id/main_shop_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:adjustViewBounds="true"
                android:focusable="false"
                android:scaleType="centerInside"
                android:src="@drawable/tab_shop_btn" />

            <TextView
                android:id="@+id/main_shop_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
                android:text="@string/tab_shops"
                android:textColor="@drawable/tab_selector_onclick"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_me_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/pp_padding_4"
            android:paddingTop="@dimen/pp_padding_4">

            <ImageView
                android:id="@+id/main_me_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:adjustViewBounds="true"
                android:focusable="false"
                android:scaleType="centerInside"
                android:src="@drawable/tab_me_btn" />

            <TextView
                android:id="@+id/main_me_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
                android:text="@string/tab_me"
                android:textColor="@drawable/tab_selector_onclick"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>