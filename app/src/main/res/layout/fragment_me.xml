<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pp_light_gray_background"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/me_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/me_title_bg" />

            <LinearLayout
                android:id="@+id/centerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/code_pic"
                    android:layout_width="@dimen/pp_height_80"
                    android:layout_height="@dimen/pp_height_80"
                    android:background="@color/white"
                    android:src="@drawable/code_pic" />
            </LinearLayout>
        </RelativeLayout>

        <com.pictureair.photopass.widget.CustomTextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/me_title"
            android:layout_marginTop="@dimen/pp_padding_10"
            android:layout_toRightOf="@+id/user_photo_bg"
            android:text="@string/username"
            android:textColor="@color/pp_dark_blue"
            android:textSize="@dimen/text_size_16" />

        <com.pictureair.photopass.widget.CircleImageView
            android:id="@+id/user_photo_bg"
            android:layout_width="@dimen/pp_height_80"
            android:layout_height="@dimen/pp_height_80"
            android:layout_below="@+id/me_title"
            android:layout_marginLeft="@dimen/pp_margin_20"
            android:layout_marginTop="@dimen/pp_margin_40_"
            android:src="@drawable/user_photo_bg" />

        <com.pictureair.photopass.widget.CircleImageView
            android:id="@+id/user_photo"
            android:layout_width="@dimen/pp_height_60"
            android:layout_height="@dimen/pp_height_60"
            android:layout_below="@+id/me_title"
            android:layout_marginLeft="@dimen/pp_margin_30"
            android:layout_marginTop="@dimen/pp_margin_30_"
            android:src="@drawable/default_photo" />

        <!-- 我的列表 -->

        <LinearLayout
            android:id="@+id/user_list"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/user_photo"
            android:layout_marginBottom="@dimen/pp_margin_16"
            android:layout_marginTop="@dimen/pp_margin_16"
            android:background="@drawable/user_item_select"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_myprofile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_top_bar_height"
                android:layout_marginLeft="@dimen/pp_padding_8"
                android:gravity="center_vertical"
                android:padding="@dimen/pp_padding_8">

                <ImageView
                    android:id="@+id/icon_me1"
                    android:layout_width="@dimen/pp_height_25"
                    android:layout_height="@dimen/pp_height_25"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/pp_padding_16"
                    android:clickable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/my_profile" />

                <com.pictureair.photopass.widget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/icon_me1"
                    android:gravity="center"
                    android:text="@string/mypage_myprofile"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/pp_height_1"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/rl_myorder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_top_bar_height"
                android:layout_marginLeft="@dimen/pp_padding_8"
                android:gravity="center_vertical"
                android:padding="@dimen/pp_padding_8">

                <ImageView
                    android:id="@+id/icon_me2"
                    android:layout_width="@dimen/pp_height_25"
                    android:layout_height="@dimen/pp_height_25"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/pp_padding_16"
                    android:clickable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/my_order" />

                <com.pictureair.photopass.widget.CustomTextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/icon_me2"
                    android:gravity="center"
                    android:text="@string/mypage_myorder"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/pp_height_1"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/rl_pp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_top_bar_height"
                android:layout_marginLeft="@dimen/pp_padding_8"
                android:gravity="center_vertical"
                android:padding="@dimen/pp_padding_8">

                <ImageView
                    android:id="@+id/icon_me3"
                    android:layout_width="@dimen/pp_height_25"
                    android:layout_height="@dimen/pp_height_25"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/pp_padding_16"
                    android:clickable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/my_pp" />

                <com.pictureair.photopass.widget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/icon_me3"
                    android:gravity="center"
                    android:text="@string/mypage_pp"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/pp_height_1"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/rl_ppp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_top_bar_height"
                android:layout_marginLeft="@dimen/pp_padding_8"
                android:gravity="center_vertical"
                android:padding="@dimen/pp_padding_8">

                <ImageView
                    android:id="@+id/icon_me4"
                    android:layout_width="@dimen/pp_height_25"
                    android:layout_height="@dimen/pp_height_25"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/pp_padding_16"
                    android:clickable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/my_ppp1" />

                <com.pictureair.photopass.widget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/icon_me4"
                    android:gravity="center"
                    android:text="@string/mypage_ppp"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/pp_height_1"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/rl_help"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_top_bar_height"
                android:layout_marginLeft="@dimen/pp_padding_8"
                android:gravity="center_vertical"
                android:padding="@dimen/pp_padding_8">

                <ImageView
                    android:id="@+id/icon_me5"
                    android:layout_width="@dimen/pp_height_25"
                    android:layout_height="@dimen/pp_height_25"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/pp_padding_16"
                    android:clickable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/help" />

                <com.pictureair.photopass.widget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/icon_me5"
                    android:gravity="center"
                    android:text="@string/mypage_help"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/pp_height_1"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/rl_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_top_bar_height"
                android:layout_marginLeft="@dimen/pp_padding_8"
                android:gravity="center_vertical"
                android:padding="@dimen/pp_padding_8">


                <ImageView
                    android:id="@+id/icon_me6"
                    android:layout_width="@dimen/pp_height_25"
                    android:layout_height="@dimen/pp_height_25"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/pp_padding_16"
                    android:clickable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/setting" />

                <com.pictureair.photopass.widget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/icon_me6"
                    android:gravity="center"
                    android:text="@string/mypage_setting"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/pp_height_1"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/rl_about"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_top_bar_height"
                android:layout_marginLeft="@dimen/pp_padding_8"
                android:gravity="center_vertical"
                android:padding="@dimen/pp_padding_8">

                <ImageView
                    android:id="@+id/icon_me7"
                    android:layout_width="@dimen/pp_height_25"
                    android:layout_height="@dimen/pp_height_25"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/pp_padding_16"
                    android:clickable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/about" />

                <com.pictureair.photopass.widget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/icon_me7"
                    android:gravity="center"
                    android:text="@string/mypage_about"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>