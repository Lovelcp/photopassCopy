<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light" >

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pp_top_bar_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/pp_dp_15"
            android:paddingLeft="@dimen/pp_dp_14"
            android:paddingRight="@dimen/pp_dp_14"
            android:paddingTop="@dimen/pp_dp_15"
            android:scaleType="centerInside"
            android:src="@drawable/back_blue"
            android:layout_above="@+id/select_pp_line"/>

        <TextView
            android:id="@+id/mypp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/mypage_pp"
            android:textColor="@color/pp_blue"
            android:textSize="@dimen/text_size_16" />

        <RelativeLayout
            android:id="@+id/pp_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/pp_dp_15"
            android:paddingLeft="@dimen/pp_dp_8"
            android:paddingRight="@dimen/pp_dp_8"
            android:paddingTop="@dimen/pp_dp_15"
            android:visibility="gone"
            android:layout_above="@+id/select_pp_line">

            <ImageView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="centerInside"
                android:src="@drawable/add_righttop" />
        </RelativeLayout>

         <TextView
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/pp_dp_14"
            android:text="@string/pp_ok"
            android:textColor="@color/pp_blue"
            android:padding="@dimen/pp_dp_5"
            android:visibility="gone"
            android:textSize="@dimen/text_size_14" />

        <View
            android:id="@id/select_pp_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_px_1"
            android:background="@color/pp_gray"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <ListView
        android:id="@+id/list_pp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/head"
        android:scrollbars="none"
        android:divider="@color/gray_light"
        android:dividerHeight="@dimen/pp_dp_5" />
    
    <com.pictureair.photopass.widget.NoNetWorkOrNoCountView
        android:id="@+id/nonetwork_view"
        android:layout_below="@id/head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/no_photo_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head"
        android:background="@color/pp_light_gray_background"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:id="@+id/no_photo_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/pp_dp_1"
                    android:layout_weight="3" />

                <ImageView
                    android:id="@+id/no_photo_img_iv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:adjustViewBounds="true"
                    android:src="@drawable/no_pp_upgrade" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/pp_dp_1"
                    android:layout_weight="3" />
            </LinearLayout>

            <TextView
                android:id="@+id/no_photo_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/no_photo_img"
                android:layout_marginTop="@dimen/pp_dp_5"
                android:gravity="center"
                android:paddingLeft="@dimen/pp_dp_20"
                android:paddingRight="@dimen/pp_dp_20"
                android:text="@string/no_photopass_update"
                android:textColor="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>