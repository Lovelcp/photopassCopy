<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light" >

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pp_top_bar_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/pp_blue" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/pp_padding_13"
            android:paddingLeft="@dimen/pp_margin_16"
            android:paddingRight="@dimen/pp_padding_10"
            android:paddingTop="@dimen/pp_padding_13"
            android:scaleType="centerInside"
            android:src="@drawable/back_white" />

        <TextView
            android:id="@+id/mypp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/mypage_pp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"
             />

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/pp_padding_13"
            android:paddingLeft="@dimen/pp_margin_10"
            android:paddingRight="@dimen/pp_margin_16"
            android:paddingTop="@dimen/pp_padding_13"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:src="@drawable/edit_my_pp" />
        
         <TextView
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/pp_margin_16"
            android:text="@string/pp_ok"
            android:background="@drawable/button_white"
            android:textColor="@color/gray"
            android:padding="@dimen/pp_padding_5"
            android:visibility="gone"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list_pp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/head"
        android:scrollbars="none"
        android:divider="@color/gray_light"
        android:dividerHeight="@dimen/pp_height_5" />
    
    <com.pictureair.photopass.widget.NoNetWorkOrNoCountView
        android:id="@+id/nonetwork_view"
        android:layout_below="@id/head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/no_photo_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head"
        android:background="@color/pp_light_gray_background"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:id="@+id/no_photo_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/pp_height_1dp"
                    android:layout_weight="2" />

                <ImageView
                    android:id="@+id/no_photo_img_iv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/no_photo_textView"
                    android:layout_weight="3"
                    android:adjustViewBounds="true"
                    android:src="@drawable/no_pp_upgrade" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/pp_height_1dp"
                    android:layout_weight="2" />
            </LinearLayout>

            <TextView
                android:id="@+id/no_photo_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/no_photo_img"
                android:layout_marginTop="@dimen/pp_margin_16"
                android:gravity="center"
                android:paddingLeft="@dimen/pp_padding_20"
                android:paddingRight="@dimen/pp_padding_20"
                android:text="@string/no_photopass_update"
                android:textColor="@color/pp_gray"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>