<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/story_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pp_top_bar_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/story_drawer_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/pp_dp_15"
            android:paddingLeft="@dimen/pp_dp_14"
            android:paddingRight="@dimen/pp_dp_14"
            android:paddingTop="@dimen/pp_dp_15">

            <ImageView
                android:id="@+id/story_drawer_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="centerInside"
                android:src="@drawable/menu" />
        </RelativeLayout>

        <com.pictureair.photopass.widget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/tab_story"
            android:textColor="@color/pp_blue"
            android:textSize="@dimen/text_size_16" />

        <RelativeLayout
            android:id="@+id/story_menu_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/pp_dp_15"
            android:paddingLeft="@dimen/pp_dp_14"
            android:paddingRight="@dimen/pp_dp_14"
            android:paddingTop="@dimen/pp_dp_15">

            <ImageView
                android:id="@+id/story_menu_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="centerInside"
                android:src="@drawable/add_blue" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/special_deal_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/story_title"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/pp_dp_8"
        android:paddingLeft="@dimen/pp_dp_10"
        android:paddingRight="@dimen/pp_dp_10"
        android:paddingTop="@dimen/pp_dp_8"
        android:visibility="gone">

        <com.pictureair.photopass.widget.CustomTextView
            android:id="@+id/special_deal_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/pp_dp_2"
            android:paddingRight="@dimen/pp_dp_2"
            android:text="@string/special_deal_on"
            android:textColor="@color/pp_red"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold" />

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/pp_dp_5"
            android:layout_marginRight="@dimen/pp_dp_5"
            android:background="@color/pp_gray" />

        <com.pictureair.photopass.widget.CustomTextView
            android:id="@+id/special_deal_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pp_dark_blue"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/story_lead_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/special_deal_ll"
        android:orientation="vertical"
        android:visibility="invisible">

        <com.pictureair.photopass.widget.viewpagerindicator.TabPageIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_dp_40"
            android:visibility="gone" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/story_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/story_lead_bar"
        android:layout_gravity="center"
        android:background="@color/white"
        android:flipInterval="10"
        android:persistentDrawingCache="animation"
        android:visibility="gone" />


    <com.pictureair.photopass.widget.NoNetWorkOrNoCountView
        android:id="@+id/storyNoNetWorkView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/special_deal_ll"
        android:visibility="gone" />


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/story_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/special_deal_ll"
        android:visibility="gone">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/story_no_pp_to_scan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:fillViewport="true"
                    android:scrollbars="none">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.pictureair.photopass.widget.BannerView
                            android:id="@+id/story_banner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <RelativeLayout
                            android:id="@+id/story_gif_rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/story_banner">

                            <ImageView
                                android:id="@+id/story_gif_iv"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:scaleType="centerCrop" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                android:src="@drawable/play" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/story_scan_rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/story_gif_rl"
                            android:paddingBottom="@dimen/pp_dp_10"
                            android:paddingLeft="@dimen/pp_dp_32"
                            android:paddingRight="@dimen/pp_dp_32">

                            <ImageView
                                android:id="@+id/story_sound_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/pp_dp_16"
                                android:src="@drawable/story_sound" />

                            <com.pictureair.photopass.widget.CustomTextView
                                android:id="@+id/story_scan_tip"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/story_sound_iv"
                                android:layout_marginLeft="@dimen/pp_dp_5"
                                android:layout_toRightOf="@+id/story_sound_iv"
                                android:text="@string/story_no_pp"
                                android:textColor="@color/pp_blue"
                                android:textSize="@dimen/text_size_14" />

                            <com.pictureair.photopass.widget.CustomTextView
                                android:id="@+id/story_tip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/story_scan_tip"
                                android:layout_below="@id/story_scan_tip"
                                android:layout_marginTop="@dimen/pp_dp_10"
                                android:text="@string/download_share_bought_photo"
                                android:textColor="@color/pp_red"
                                android:textSize="@dimen/text_size_14" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/story_tip"
                                android:layout_toRightOf="@id/story_tip"
                                android:src="@drawable/story_click" />

                        </RelativeLayout>
                    </RelativeLayout>
                </ScrollView>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/no_photo_view_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/pp_dp_64"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/story_tips_bg" />

                <com.pictureair.photopass.widget.CustomTextView
                    android:id="@+id/story_no_photo_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/pp_dp_20"
                    android:gravity="center"
                    android:text="@string/storypage_no_photo"
                    android:textColor="@color/pp_dark_blue"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    android:id="@+id/story_to_discover"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:adjustViewBounds="true"
                    android:src="@drawable/story_no_photo_1" />

                <com.pictureair.photopass.widget.CustomTextView
                    android:id="@+id/story_discover"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/pp_dp_10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/tab_discover"
                    android:textColor="@color/pp_blue"
                    android:textSize="@dimen/text_size_20"
                    android:textStyle="bold" />

                <com.pictureair.photopass.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pp_dp_20"
                    android:layout_marginRight="@dimen/pp_dp_20"
                    android:gravity="center"
                    android:text="@string/story_no_photo"
                    android:textColor="@color/pp_blue"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>