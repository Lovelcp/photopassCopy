<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_blue_top">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pp_padding_10"
            android:padding="@dimen/pp_padding_10"
            android:text="@string/gender"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl01"
        android:background="@drawable/bg_dialog_white_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/isSelectMale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pp_padding_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pp_margin_5"
                android:text="@string/male"
                android:textColor="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:id="@+id/iVisSelectMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/pp_margin_10"
                android:src="@drawable/sele" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pp_height_1"
            android:background="@color/gray_light2" />

        <RelativeLayout
            android:id="@+id/isSelectFemale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pp_padding_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pp_margin_5"
                android:text="@string/female"
                android:textColor="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:id="@+id/iVisSelectFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/pp_margin_10"
                android:src="@drawable/nosele" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>