<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pp_light_gray_background"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_disney_null_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pp_dp_100"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_disney_null_photo"/>


    <TextView
        android:id="@+id/tv_disney_null_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_disney_null_photo"
        android:layout_marginLeft="@dimen/pp_dp_64"
        android:layout_marginTop="@dimen/pp_dp_20"
        android:layout_marginRight="@dimen/pp_dp_64"
        android:text="@string/disney_video_about_null_photo_note"
        android:textColor="@color/pp_dark_blue"
        android:textSize="@dimen/text_size_16" />


    <!-- 隐藏去挑选的按钮 -->
    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_goto_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pp_dp_16"
            android:background="@drawable/button_blue_shape_and_selector"
            android:padding="@dimen/pp_dp_10"
            android:text="@string/disney_video_go_to_select_photo"
            android:textColor="@drawable/textview_selector_blue_white"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

</RelativeLayout>