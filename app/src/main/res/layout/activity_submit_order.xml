<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/submitOrderRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lltitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pp_top_bar_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/pp_blue">

        <ImageView
            android:id="@+id/llrt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/pp_padding_13"
            android:paddingLeft="@dimen/pp_padding_10"
            android:paddingRight="@dimen/pp_padding_10"
            android:paddingTop="@dimen/pp_padding_13"
            android:scaleType="centerInside"
            android:src="@drawable/back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/submitorder"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>


    <ListView
        android:id="@+id/listView_submitorder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout1"
        android:layout_below="@id/lltitle"
        android:background="@color/white"
        android:divider="@color/pp_light_gray_normal"
        android:dividerHeight="0dp"
        android:focusable="true"
        android:scrollbars="none" />

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/pp_light_gray_background">

        <TextView
            android:id="@+id/good_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/all_goods"
            android:textColor="@color/gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/button2_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/blue"
            android:padding="15dp"
            android:text="@string/checkout"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/submitorder_textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/button2_submit"
            android:text="30.00"
            android:textColor="@color/pp_orange"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/submitorder_textView3"
            android:text="$"
            android:textColor="@color/pp_orange"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/submitorder_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/textView_currency"
            android:text="@string/totalprice"
            android:textColor="@color/gray"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>