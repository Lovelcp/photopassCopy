<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:paddingBottom="@dimen/pp_margin_8"
    android:paddingLeft="@dimen/pp_padding_16"
    android:paddingRight="@dimen/pp_padding_16"
    android:paddingTop="@dimen/pp_margin_8">

    <RelativeLayout
        android:id="@+id/order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/order_imageView_pd"
            android:layout_width="@dimen/pp_height_60"
            android:layout_height="@dimen/pp_height_60"
            android:layout_alignParentLeft="true"
            android:background="@color/transparent"
            android:focusable="false"
            android:src="@drawable/ic_stub" />

        <TextView
            android:id="@+id/order_textView_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/pp_margin_16"
            android:layout_marginRight="@dimen/pp_margin_16"
            android:layout_toLeftOf="@+id/right_rl"
            android:layout_toRightOf="@+id/order_imageView_pd"
            android:focusable="false"
            android:text="niini"
            android:textColor="@color/pp_blue"
            android:textSize="@dimen/text_size_14" />

        <LinearLayout
            android:id="@+id/right_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:focusable="false"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_textview_currency2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:focusable="false"
                    android:text="$"
                    android:textColor="@color/pp_dark_blue"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/order_textView_pr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/pp_margin_2"
                    android:focusable="false"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="15.00"
                    android:textColor="@color/pp_dark_blue"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll"
                android:orientation="horizontal"
                android:paddingTop="@dimen/pp_padding_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/pp_margin_5"
                    android:focusable="false"
                    android:text="x"
                    android:textColor="@color/pp_dark_blue"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/order_editText_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:focusable="false"
                    android:text="1"
                    android:textColor="@color/pp_dark_blue"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <GridLayout
        android:id="@+id/order_grid_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_detail"
        android:layout_marginTop="@dimen/pp_margin_8"
        android:background="@drawable/bg_border_stroke"
        android:columnCount="4"
        android:focusable="false"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/pp_padding_20"
        android:paddingTop="@dimen/pp_padding_10"
        android:paddingBottom="@dimen/pp_padding_10"
        android:useDefaultMargins="true"
        android:visibility="gone" />

</RelativeLayout>