<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pp_light_gray_background">

    <include
        android:id="@+id/head"
        layout="@layout/top_bar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"></include>

    <View
        android:id="@+id/head_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/pp_margin_16"
        android:layout_below="@+id/head"
        android:background="@color/pp_light_gray_press" />

    <ListView
        android:id="@+id/lv_helps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/pp_light_gray_normal"
        android:layout_below="@+id/head_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/lv_helps"
        android:background="@color/pp_light_gray_normal" />

    <com.pictureair.photopass.widget.NoNetWorkOrNoCountView
        android:id="@+id/storyNoNetWorkView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/head"
        android:visibility="gone" />


</RelativeLayout>