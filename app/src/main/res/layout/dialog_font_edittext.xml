<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/pp_top_bar_height"
    android:layout_alignParentBottom="true"
    android:background="@drawable/font_input_bg"
    android:paddingBottom="@dimen/pp_margin_5"
    android:paddingTop="@dimen/pp_margin_5">

    <ImageButton
        android:id="@+id/imgbtn_submit"
        android:layout_width="@dimen/pp_width_40"
        android:layout_height="@dimen/pp_height_30"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/pp_margin_5"
        android:background="@drawable/btn_font_input_ok_bg"
        android:padding="@dimen/pp_padding_10"
        android:scaleType="centerCrop"
        android:src="@drawable/font_input_ok" />

    <ImageButton
        android:id="@+id/imgbtn_cancel"
        android:layout_width="@dimen/pp_width_40"
        android:layout_height="@dimen/pp_height_30"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/pp_margin_5"
        android:background="@drawable/btn_font_input_cancel_bg"
        android:padding="@dimen/pp_padding_10"
        android:scaleType="centerCrop"
        android:src="@drawable/font_input_cancel" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/pp_margin_5"
        android:layout_marginRight="@dimen/pp_margin_5"
        android:layout_toLeftOf="@id/imgbtn_submit"
        android:layout_toRightOf="@id/imgbtn_cancel"
        android:background="@drawable/font_input_edittext_bg">

        <ImageButton
            android:id="@+id/imgbtn_clear"
            android:layout_width="@dimen/pp_height_20"
            android:layout_height="@dimen/pp_height_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/pp_margin_8"
            android:layout_marginRight="@dimen/pp_margin_8"
            android:background="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_font_input_clear" />

        <EditText
            android:id="@+id/et_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/pp_margin_8"
            android:layout_toLeftOf="@id/imgbtn_clear"
            android:background="@null"
            android:maxLines="3"
            android:minHeight="@dimen/pp_height_30" />
    </RelativeLayout>

</RelativeLayout>