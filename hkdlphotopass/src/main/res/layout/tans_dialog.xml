<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pp_light_gray_background">

    <View
        android:id="@+id/blur_translate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pp_top_bar_height"
        android:background="@color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/blur_translate"
        android:orientation="vertical">

        <TextView
            android:id="@+id/blur_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/transparent"
            android:gravity="center"
            android:padding="@dimen/pp_margin_16"
            android:text="@string/blur_intro"
            android:textColor="@color/pp_blue"
            android:visibility="invisible"
            android:textSize="@dimen/text_size_16" />

        <LinearLayout
            android:id="@+id/blur_button_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/buy_ppp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pp_margin_16"
                android:layout_marginLeft="@dimen/pp_margin_16"
                android:layout_marginRight="@dimen/pp_margin_16"
                android:layout_marginTop="@dimen/pp_margin_16"
                android:background="@drawable/button_blue_shape_and_selector"
                android:gravity="center"
                android:padding="@dimen/pp_padding_10"
                android:text="@string/up_ppp_money"
                android:textColor="@drawable/textview_selector_blue_white"
                android:textSize="@dimen/text_size_16" />


            <TextView
                android:id="@+id/use_ppp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pp_margin_16"
                android:layout_marginLeft="@dimen/pp_margin_16"
                android:layout_marginRight="@dimen/pp_margin_16"
                android:background="@drawable/button_blue_shape_and_selector"
                android:gravity="center"
                android:padding="@dimen/pp_padding_10"
                android:text="@string/use_ppp"
                android:textColor="@drawable/textview_selector_blue_white"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/buynow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pp_margin_16"
                android:layout_marginLeft="@dimen/pp_margin_16"
                android:layout_marginRight="@dimen/pp_margin_16"
                android:background="@drawable/button_blue_shape_and_selector"
                android:gravity="center"
                android:padding="@dimen/pp_padding_10"
                android:text="@string/buythisphoto"
                android:textColor="@drawable/textview_selector_blue_white"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pp_margin_16"
                android:layout_marginLeft="@dimen/pp_margin_16"
                android:layout_marginRight="@dimen/pp_margin_16"
                android:background="@drawable/button_sign_shape_and_selector"
                android:gravity="center"
                android:padding="@dimen/pp_padding_10"
                android:text="@string/cancel1"
                android:textColor="@color/pp_blue"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>