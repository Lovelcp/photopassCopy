<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pp_light_gray_background">

    <include
        android:id="@+id/head"
        layout="@layout/top_bar" />

    <TextView
        android:id="@+id/tv_confirm_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_margin="@dimen/pp_margin_20"
        android:gravity="center"
        android:text="@string/confirm_ppp_code_text_hint"
        android:textColor="@color/pp_dark_blue"
        android:textSize="@dimen/text_size_16" />

    <RelativeLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_confirm_hint"
        android:padding="@dimen/pp_padding_10">

        <LinearLayout
            android:id="@+id/comfirm_ppp_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/input1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_white_blue_line_shape"
                android:digits="@string/input_content"
                android:ems="4"
                android:gravity="center"
                android:imeOptions="actionGo"
                android:maxLength="4"
                android:singleLine="true"
                android:textColor="@color/pp_dark_blue"
                android:textColorHint="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_16" />

            <View
                android:layout_width="@dimen/pp_height_10"
                android:layout_height="@dimen/pp_height_1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/pp_dark_blue" />

            <EditText
                android:id="@+id/input2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_white_blue_line_shape"
                android:digits="@string/input_content"
                android:ems="4"
                android:gravity="center"
                android:imeOptions="actionGo"
                android:maxLength="4"
                android:singleLine="true"
                android:textColor="@color/pp_dark_blue"
                android:textColorHint="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_16" />

            <View
                android:layout_width="@dimen/pp_height_10"
                android:layout_height="@dimen/pp_height_1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/pp_dark_blue" />

            <EditText
                android:id="@+id/input3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_white_blue_line_shape"
                android:digits="@string/input_content"
                android:ems="4"
                android:gravity="center"
                android:imeOptions="actionGo"
                android:maxLength="4"
                android:singleLine="true"
                android:textColor="@color/pp_dark_blue"
                android:textColorHint="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_16" />

            <View
                android:layout_width="@dimen/pp_height_10"
                android:layout_height="@dimen/pp_height_1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/pp_dark_blue" />

            <EditText
                android:id="@+id/input4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pp_height_40"
                android:layout_weight="1"
                android:background="@drawable/button_white_blue_line_shape"
                android:digits="@string/input_content"
                android:ems="4"
                android:gravity="center"
                android:imeOptions="actionGo"
                android:maxLength="4"
                android:singleLine="true"
                android:textColor="@color/pp_dark_blue"
                android:textColorHint="@color/pp_dark_blue"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>

    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_show_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_input"
        android:paddingLeft="@dimen/pp_padding_10"
        android:paddingRight="@dimen/pp_padding_10"/>

    <LinearLayout
        android:id="@+id/lv_buttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/pp_margin_16">

        <Button
            android:id="@+id/btn_confirm_scan_ppp_code"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_blue_shape_and_selector"
            android:padding="@dimen/pp_padding_10"
            android:text="@string/ok"
            android:textColor="@drawable/textview_selector_blue_white"
            android:textSize="@dimen/pp_margin_16" />

        <Button
            android:id="@+id/btn_re_scan_ppp_code"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/pp_margin_16"
            android:layout_weight="1"
            android:background="@drawable/button_sign_shape_and_selector"
            android:padding="@dimen/pp_padding_10"
            android:text="@string/re_scan"
            android:textColor="@color/pp_blue"
            android:textSize="@dimen/pp_margin_16" />
    </LinearLayout>


</RelativeLayout>