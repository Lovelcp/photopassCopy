<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left|bottom"
    android:background="@drawable/pop_bg2"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/photopassLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingRight="20dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/album_photopass" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:background="@color/transparent"
            android:gravity="left"
            android:layout_centerVertical="true"
            android:text="@string/album_photopass"
            android:textColor="@color/gray"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:id="@+id/photopass_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_light" />

    <RelativeLayout
        android:id="@+id/magicLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/album_magic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:background="@color/transparent"
            android:gravity="left"
            android:layout_centerVertical="true"
            android:text="@string/album_magic"
            android:textColor="@color/gray"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:id="@+id/magic_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_light" />

    <RelativeLayout
        android:id="@+id/downloadLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/album_download" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:gravity="left"
            android:text="@string/album_download"
            android:textColor="@color/gray"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:id="@+id/download_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_light" />

    <RelativeLayout
        android:id="@+id/otherLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/album_other" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:background="@color/transparent"
            android:gravity="left"
            android:layout_centerVertical="true"
            android:text="@string/album_other"
            android:textColor="@color/gray"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>