<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light" >

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/blue" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="#00000000"
            android:text="@string/selected"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/imageButton_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="#00000000"
            android:src="@drawable/preview_edit"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rlrt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingRight="10dp" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/back_white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#00000000"
            android:text="@string/select"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TabWidget
        android:id="@+id/tabWidget1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:divider="@drawable/line4"
        android:gravity="center_horizontal" />

    <com.pictureAir.widget.MyViewPager
        android:id="@+id/viewPager_selectphoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tabWidget1"
        android:layout_below="@id/layout1"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" >
    </com.pictureAir.widget.MyViewPager>

    <LinearLayout
        android:id="@+id/select_tools_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tabWidget1"
        android:layout_alignTop="@id/tabWidget1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/select_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/all"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/all"
            android:textColor="@drawable/textview_selector_onclick"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/select_makegift"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/makegift"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/makegift"
            android:textColor="@drawable/textview_selector_onclick"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/select_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/share"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/Share"
            android:textColor="@drawable/textview_selector_onclick"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/select_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/delete"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/delete"
            android:textColor="@drawable/textview_selector_onclick"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>