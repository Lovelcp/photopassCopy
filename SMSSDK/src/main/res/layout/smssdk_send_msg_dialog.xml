<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog_white_content" >

        <com.pictureair.photopass.widget.CustomTextView
            android:id="@+id/tv_dialog_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="@string/smssdk_make_sure_mobile_detail"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_middle_size" />

        <com.pictureair.photopass.widget.CustomTextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_middle_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/pp_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_gray_ok2">

        <cn.smssdk.gui.CustomButtonFont
            android:id="@+id/btn_dialog_ok"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dip"
            android:textSize="@dimen/text_middle_size"
            android:text="@string/smssdk_ok"
            android:textColor="@color/pp_blue" />
        <View
            android:id="@+id/middle_line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/pp_gray" />
        <cn.smssdk.gui.CustomButtonFont
            android:id="@+id/btn_dialog_cancel"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dip"
            android:textSize="@dimen/text_middle_size"
            android:text="@string/smssdk_cancel"
            android:textColor="@color/pp_gray" />
    </LinearLayout>

</LinearLayout>