<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_enabled="true">
        <shape>
            <solid android:color="@color/pp_blue" />

            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="false" android:state_enabled="true">
        <shape>
            <solid android:color="@color/transparent" />

            <stroke android:width="1px" android:color="@color/pp_blue" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_enabled="true">
        <shape>
            <solid android:color="@color/pp_blue" />

            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_enabled="true">
        <shape>
            <solid android:color="@color/transparent" />
            <stroke android:width="1px" android:color="@color/pp_blue" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/pp_gray" />

            <corners android:radius="5dp" />
        </shape>
    </item>

</selector>