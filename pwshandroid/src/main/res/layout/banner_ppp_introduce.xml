<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/view_pager_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/view_pager_content"
        android:layout_marginBottom="@dimen/pp_margin_10"
        android:layout_marginRight="@dimen/pp_margin_5"
        android:layout_marginTop="@dimen/pp_margin_5"
        android:gravity="center"
        android:orientation="horizontal" />

</RelativeLayout>